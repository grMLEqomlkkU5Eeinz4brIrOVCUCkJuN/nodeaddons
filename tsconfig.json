{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"lib": [
			"ES2020"
		],
		"outDir": "./dist",
		"rootDir": "./lib",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
	},
	"include": [
		"lib/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}